{
  "name": "CampusGuide",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "yarn run clean && yarn run tsc --",
    "clean": "rimraf artifacts",
    "lint": "tslint 'src/**/*.ts?(x)'",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start:android": "yarn run build && concurrently -r 'yarn run watch' 'react-native run-android'",
    "start:ios": "yarn run build && concurrently -r 'yarn run watch' 'react-native run-ios'",
    "test": "yarn run build && jest --coverage",
    "tsc": "tsc",
    "tscp": "tsc --pretty",
    "watch": "yarn run build -- -w"
  },
  "dependencies": {
    "fastpriorityqueue": "^0.3.1",
    "http-status-codes": "^1.2.0",
    "moment": "^2.18.1",
    "react": "16.0.0-alpha.12",
    "react-native": "0.47.2",
    "react-native-action-button": "^2.7.1",
    "react-native-deprecated-custom-components": "^0.1.0",
    "react-native-device-info": "0.11.0",
    "react-native-fs": "2.5.1",
    "react-native-linear-gradient": "2.3.0",
    "react-native-maps": "0.16.2",
    "react-native-scrollable-tab-view": "^0.7.2",
    "react-native-simple-store": "^1.3.0",
    "react-native-snackbar": "0.4.1",
    "react-native-vector-icons": "4.3.0",
    "react-redux": "5.0.6",
    "redux": "^3.7.1",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "@types/http-status-codes": "^1.0.29",
    "@types/jest": "^20.0.4",
    "@types/react": "^15.0.38",
    "@types/react-native": "^0.46.5",
    "@types/react-native-fs": "^2.0.3",
    "@types/react-redux": "^4.4.46",
    "babel-jest": "^20.0.3",
    "babel-preset-react-native": "^3.0.1",
    "concurrently": "^3.5.0",
    "empty": "^0.10.1",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
    "jest-react-native": "^18.0.0",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.6",
    "tslint": "^5.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "2.5.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "artifacts/util/*.js",
      "artifacts/actions/*.js",
      "artifacts/reducers/*.js",
      "!artifacts/**/*.spec.js",
      "!artifacts/**/*.index.js",
      "!artifacts/actions/index.js",
      "!artifacts/util/Configuration.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "mapCoverage": true,
    "moduleNameMapper": {
      "^[./]*assets[a-zA-Z0-9./]*/([a-zA-Z.]+)$": "empty/object"
    },
    "preset": "react-native",
    "testRegex": "artifacts/.+[-.](test|spec).js$",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
